{
  "schemaVersion": 1,
  "id": "serversidereplayrecorder",
  "version": "${version}",
  "name": "Server Side Replay Recorder",
  "description": "Records all client connections at once to the format that ReplayMod uses. Shouldn't require too many fixes between versions.",
  "authors": ["thecolonel63"],
  "contact": {
    "homepage": "https://github.com/thecolonel63/server-side-replay-recorder",
    "issues": "https://github.com/thecolonel63/server-side-replay-recorder/issues",
    "sources": "https://github.com/thecolonel63/server-side-replay-recorder"
  },
  "license": "MIT",
  "environment": "server",
  "entrypoints": {
    "main": [
      "com.thecolonel63.serversidereplayrecorder.ServerSideReplayRecorder"
    ],
    "server": [
      "com.thecolonel63.serversidereplayrecorder.server.ServerSideReplayRecorderServer"
    ]
  },
  "mixins": [
    "serversidereplayrecorder.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.13.2",
    "minecraft": "1.18.2"
  }
}
